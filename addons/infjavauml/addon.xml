<?xml version="1.0" encoding="utf-8"?>
<AddOn xmlns="http://umlfri.org/v2/addon.xsd">
    <Identity uri="urn:umlfri.org:metamodel:infjavauml"/>

    <FriendlyName name="UML for FRI students" version="0.1"/>

    <Author>
        <Name name="JÃ¡n Janech"/>
        <Homepage url="http://umlfri.org"/>

        <CommonLicense name="GPL-3"/>
    </Author>

    <Icon path="icons/uml_icon.png"/>

    <Description>
        Unified Modeling Language (UML) is a standardized general-purpose
        modeling language in the field of software engineering.

        UML includes a set of graphical notation techniques to create
        abstract models of specific systems.
    </Description>
    
    <Config>
        <Attribute id="element" type="object">
            <Attribute id="line" type="color" default="black" />
            <Attribute id="fill" type="color" default="lightyellow" />
            <Attribute id="fill2" type="color" default="lightyellow" />
            <Attribute id="fill3" type="color" default="black" />
            <Attribute id="shadow" type="color" default="#B0000000" />
            <Attribute id="heading" type="color" default="black" />
            <Attribute id="text" type="color" default="black" />
            <Attribute id="headingfont" type="font" default="Arial 10" />
            <Attribute id="textfont" type="font" default="Arial 10" />
        </Attribute>
        <Attribute id="connection" type="object">
            <Attribute id="line" type="color" default="black"/>
            <Attribute id="arrow" type="color" default="black"/>
            <Attribute id="fill" type="color" default="white"/>
            <Attribute id="heading" type="color" default="black"/>
            <Attribute id="text" type="color" default="black"/>
            <Attribute id="headingfont" type="font" default="Arial 10" />
            <Attribute id="textfont" type="font" default="Arial 10" />
        </Attribute>
        <Attribute id="background" type="color" default="white" />
    </Config>

    <Translations>
        <Translation lang="en" path="translations/en.xml"/>
    </Translations>
    
    <Metamodel path="metamodel"/>
</AddOn>
