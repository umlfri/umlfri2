<?xml version="1.0" encoding="utf-8"?>
<ElementType id="actor" xmlns="http://umlfri.org/v2/addon.xsd">
    <Icon path="icons/actor.png" />

    <Structure>
        <Attribute id="name" type="str">
            <Template>
                <Text text="Actor"/>
                <Text text="#no"/>
            </Template>
        </Attribute>
        <Attribute id="stereotype" type="str"/>
        <Attribute id="note" type="text"/>
    </Structure>

    <DisplayName>
        <Text text="#self.name"/>
    </DisplayName>

    <Appearance>
        <VBox>
            <Align horizontal="center">
                <Shadow padding="5" color="#cfg.element.shadow">
                    <Sizer width="75" height="100">
                        <Graphics width="75" height="100">
                        
                            <Path fill="#cfg.element.fill" border="#cfg.element.line">
                                <MoveTo x="52.25" y="15"/>
                                <CubicTo x1="52.25" y1="23.28" x2="45.53" y2="30" x="37.25" y="30"/>
                                <CubicTo x1="28.97" y1="30" x2="22.25" y2="23.28" x="22.25" y="15"/>
                                <CubicTo x1="22.25" y1="6.72" x2="28.97" y2="0" x="37.25" y="0"/>
                                <CubicTo x1="45.53" y1="0" x2="52.25" y2="6.72" x="52.25" y="15"/>
                                <Close/>
                            </Path>
                            <Path border="#cfg.element.line">
                                <MoveTo x="0" y="100"/>
                                <LineTo x="37.25" y="62.85"/>
                                <LineTo x="74.5" y="100"/>
                            </Path>
                            <Path border="#cfg.element.line">
                                <MoveTo x="37.25" y="62.85"/>
                                <LineTo x="37.25" y="30"/>
                            </Path>
                            <Path border="#cfg.element.line">
                                <MoveTo x="10" y="34"/>
                                <LineTo x="64.5" y="34"/>
                            </Path>
                        
                        </Graphics>
                    </Sizer>
                </Shadow>
            </Align>
            <Align horizontal="center">
                <TextBox text="#self.name" font="#cfg.element.textfont" color="#cfg.element.text"/>
            </Align>
        </VBox>
    </Appearance>
</ElementType>
