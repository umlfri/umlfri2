<?xml version="1.0" encoding="utf-8"?>
<DiagramType id="class_diagram" xmlns="http://umlfri.org/v2/addon.xsd">
    <Icon path="icons/class_diagram.png"/>

    <Structure>
        <Attribute id="name" type="str">
            <Template>
                <Text text="#parent"/>
            </Template>
        </Attribute>
        <Attribute id="note" type="text"/>
    </Structure>

    <DisplayName>
        <Text text="#self.name"/>
    </DisplayName>

    <Elements>
        <Element id="class"/>
        <Element id="package"/>
        <Element id="note"/>
    </Elements>

    <Connections>
        <Connection id="association"/>
        <Connection id="composition"/>
        <Connection id="note_link"/>
    </Connections>

    <Appearance>
        <Background color="#cfg.background"/>
    </Appearance>
</DiagramType>
