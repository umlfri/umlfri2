<?xml version="1.0" encoding="utf-8"?>
<ElementType id="note" xmlns="http://umlfri.org/v2/addon.xsd">
    <Icon path="icons/note.png" />
    
    <Structure>
        <Attribute id="note" type="text"/>
    </Structure>

    <DisplayName />
    
    <Appearance>
        <Shadow padding="5" color="#cfg.element.shadow">
            <Rectangle fill="#cfg.element.fill" border="#cfg.element.line" topright="note">
                <Sizer minwidth="50">
                    <Padding padding="5">
                        <Align horizontal="left" vertical="top">
                            <TextBox text="#self.note" font="#cfg.element.textfont" color="#cfg.element.text"/>
                        </Align>
                    </Padding>
                </Sizer>
            </Rectangle>
        </Shadow>
    </Appearance>
</ElementType>
